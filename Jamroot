project
    : requirements <include>/opt/cantera-gcc/include
                   <include>/opt/sundials-2.4.0-gcc/include
                   <include>/opt/matlab2009a/extern/include
		   <search>/opt/cantera-gcc/lib
		   <search>/opt/sundials-2.4.0-gcc/lib
		   <search>/opt/matlab2009a/bin/glnxa64
    ;

lib equil kinetics transport thermo tpx ctnumerics clib ctbase ctcxx ctf2c ctmath ;
alias cantera : equil kinetics transport thermo tpx ctnumerics
                clib ctbase ctcxx ctf2c ctmath : <link>static ;

lib sundials_cvode sundials_ida sundials_nvecserial ;
alias sundials : sundials_cvode sundials_ida sundials_nvecserial : <link>static ;

lib icui18n icuio icuuc icudata ut mat mx ;
alias matlab : icui18n icuio icuuc icudata ut mat mx ;

lib config++ lapack blas boost_filesystem ;

exe 1dflameV2 : [ glob src/*.cpp ] cantera sundials lapack blas config++ matlab boost_filesystem
	      ;
